{
    "name": "flairjs",
    "title": "Flair.js",
    "description": "True Object Oriented JavaScript",
    "copyright": "(c) 2017-2019 Vikas Burman",
    "version": "0.9.0",
    "author": "Vikas Burman <vikasburman@gmail.com>",
    "keywords": [
        "javascript",
        "oops",
        "js",
        "object oriented",
        "es6",
        "es5",
        "es7"
    ],
    "engines": {
        "node": "10"
    },
    "license": "MIT",
    "link": "https://flairjs.com",
    "homepage": "https://flairjs.com",
    "repository": {
        "type": "git",
        "url": "https://github.com/vikasburman/flairjs.git"
    },
    "main": "./flair.js",
    "scripts": {
        "build": "gulp build --options ./config/build.json",
        "build-full": "gulp build --full --options ./config/build.json",
        "build-quick": "gulp build --quick --options ./config/build.json",
        "test": "gulp test --TEST --options ./config/test.json",
        "test-client": "gulp test --TEST --client --options ./config/test.json",
        "package": "gulp package --options ./config/pack.json && npm pack ./publish/package/npm",
        "start": "http-server ./ -p8088 &",
        "docs": "http-server ./docs/ -p8088 &",
        "stop": "pkill -f http-server"
    },
    "devDependencies": {
        "clean-css": "^4.2.1",
        "copy-dir": "^1.1.0",
        "del": "^4.1.1",
        "eslint": "^6.0.1",
        "fast-glob": "^3.0.2",
        "fs-extra": "^8.0.1",
        "gulp": "^4.0.2",
        "html-minifier": "^4.0.0",
        "htmllint": "^0.8.0",
        "http-server": "^0.11.1",
        "jasmine": "^3.4.0",
        "minimist": "^1.2.0",
        "open": "^6.3.0",
        "recursive-readdir-sync": "^1.0.6",
        "stylelint": "^10.1.0",
        "uglify-es": "^3.3.9"
    },
    "dependencies": {}
}